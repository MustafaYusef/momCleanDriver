<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/gray">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/profileImage"
                android:layout_width="match_parent"
                android:layout_height="170dp"

                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                android:layout_gravity="center|top"
             />



        </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="right"

                    android:text="معلومات الحساب"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"



                    android:textSize="14dp"
                    android:fontFamily="@font/font_regular"
                    android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@color/white"
            android:elevation="5dp"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:drawableRight="@drawable/ic_account_circle_black_24dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:gravity="right"
                android:id="@+id/userNameProfile"



                android:textSize="18dp"
                android:fontFamily="@font/font_regular"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray"
                android:layout_margin="5dp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:drawableRight="@drawable/ic_call_24dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:gravity="right"
                android:id="@+id/phoneProfile"



                android:textSize="18dp"
                android:fontFamily="@font/font_regular"
                android:layout_height="wrap_content"/>


        </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:gravity="right"

                    android:text="الأعدادات"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"



                    android:textSize="14dp"
                    android:fontFamily="@font/font_regular"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:drawableRight="@drawable/ic_phonelink_setup_black_24dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:text="تغيير الصورة الشخصية"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/editeProfile"

                        android:textSize="18dp"
                        android:fontFamily="@font/font_regular"
                        android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgray"
                        android:layout_margin="5dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:drawableRight="@drawable/ic_lock_open_black_24dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:id="@+id/changePassBt"
                        android:text="تغيير كلمة المرور"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"

                        android:textSize="18dp"
                        android:fontFamily="@font/font_regular"
                        android:drawableLeft="@drawable/ic_chevron_left_black_24dp"
                        android:layout_height="wrap_content"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/lightgray"
                        android:layout_margin="5dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:drawableRight="@drawable/ic_radio_button_checked_red_24dp"
                        android:padding="10dp"
                        android:drawablePadding="10dp"
                        android:gravity="right"
                        android:id="@+id/changeStatus"
                        android:text="تغيير الحالة"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"

                        android:textSize="18dp"
                        android:fontFamily="@font/font_regular"
                        android:drawableLeft="@drawable/ic_mode_edit_black_24dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressProf"
        android:visibility="gone"
        android:layout_gravity="center"/>

</FrameLayout>