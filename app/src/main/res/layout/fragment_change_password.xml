<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
  >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/tol2"
                android:layout_width="match_parent"
                android:layout_height="182dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="154dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/logo1" />


            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layoutDirection="ltr"
                android:layout_marginTop="10dp"
                android:background="@drawable/back_text"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="55dp"


                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layerType="software"

                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="2dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/darkgray"
                    android:layoutDirection="rtl"
                    >

                    <EditText
                        android:id="@+id/oldPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/font_regular"
                        android:gravity="right|center"
                        android:hint="كلمة المرور"
                        android:padding="5dp"
                        android:inputType="textPassword"
                        android:paddingRight="5dp"
                        android:textColorHint="@color/darkgray"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"

                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_lock_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:layout_marginTop="20dp"
                android:layoutDirection="ltr"
                android:background="@drawable/back_text"
                android:orientation="horizontal">


                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="55dp"


                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layerType="software"

                    app:boxStrokeColor="@color/colorPrimary"
                    app:boxStrokeWidth="2dp"
                    app:hintEnabled="false"

                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/darkgray"
                    android:layoutDirection="rtl"
                    >

                    <EditText
                        android:id="@+id/newPassword"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/font_regular"
                        android:gravity="right|center"
                        android:hint="كلمة المرور الجديدة"
                        android:padding="5dp"
                        android:inputType="textPassword"
                        android:paddingRight="5dp"
                        android:textColorHint="@color/darkgray"
                        android:textSize="20sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"

                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_lock_black_24dp" />
            </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <ProgressBar
                        android:id="@+id/ProgSign"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/changePassBtn"
                        app:layout_constraintStart_toStartOf="@+id/changePassBtn"
                        app:layout_constraintTop_toTopOf="@+id/changePassBtn" />

                    <Button
                        android:id="@+id/changePassBtn"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/round_btn4"
                        android:fontFamily="@font/font_bold"
                        android:text="تحديث"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>



        </LinearLayout>

            </LinearLayout>


    </ScrollView>
</FrameLayout>