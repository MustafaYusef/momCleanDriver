<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.mapFragment">


    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mapLoc"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        tools:layout="@layout/fragment_map" />

    <TextView
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_regular"
        android:textSize="18sp"
        android:padding="5dp"
        android:layout_gravity="center|top"
        android:layout_marginTop="10dp"
         android:textColor="@color/redTrans"
        android:id="@+id/changeState"
        android:visibility="gone"
        android:text="لا يمكنك استلام الطلبات يجب تغيير الحاله"

        android:background="@drawable/trans_red"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:translationY="-18dp"
        android:src="@drawable/ic_placeholder"/>
<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/progMap"
    android:layout_gravity="center"
    android:visibility="gone"/>
</FrameLayout>